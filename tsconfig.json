{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": false,
    "target": "ES5",
    "skipLibCheck": true,
    "declaration": false,
    "strict": true,
    "pretty": false,
    "removeComments": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": false,
    "outDir": "./build"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ]
}